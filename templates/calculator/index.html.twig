{% extends 'base.html.twig' %}

{% block title %}Hello CalculatorController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Welcome to the Calculator! âœ…</h1>

    {% if app.flashes('error') %}
        <div class="alert alert-danger">
            {{ app.flashes('error')|join('<br>') }}
        </div>
    {% endif %}

    <form method="post" action="{{ path('calculator') }}">
        <input type="number" name="a" placeholder="First Number" required>
        <select name="operation">
            <option value="add">+</option>
            <option value="subtract">-</option>
            <option value="multiply">*</option>
            <option value="divide">/</option>
        </select>
        <input type="number" name="b" placeholder="Second Number" required>
        <button type="submit">Calculate</button>
    </form>

    {% if result is not null %}
        <h3>Result: {{ result }}</h3>
    {% endif %}
</div>
{% endblock %}
